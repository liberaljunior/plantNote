<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadDiaryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvReadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="00/00/00"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/gohome"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"

                    android:src="@drawable/homebtn_24dp" />

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/thin_bar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDiaryDate"
                android:layout_width="200dp"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/tvContext"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/back"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/btnModifyDiary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="30dp"

                android:src="@drawable/ic_modifybtn2" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_dlg_last_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#CC3D3D" />

        </LinearLayout>
    </LinearLayout>


    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:src="@drawable/gardening_icon1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gardening_icon_water"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">


        <TextView
            android:id="@+id/tv_dlg_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 정한 주기"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last : "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_dlg_lastW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#CC3D3D" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:src="@drawable/thin_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:src="@drawable/gardening_icon2"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gardening_icon_fir"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">



        <TextView
            android:id="@+id/tv_dlg_firtilize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 정한 주기"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_dlg_last_fil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#CC3D3D" />

        </LinearLayout>
    </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:src="@drawable/thin_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:src="@drawable/gardening_icon3"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gardening_icon_rep"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">



        <TextView
            android:id="@+id/tv_dlg_reppot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
